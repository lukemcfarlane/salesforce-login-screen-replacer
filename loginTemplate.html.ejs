<body style="display: block !important">
    <div class="container text-center">
            <img class="logo" src="<%= logoUrl %>"/>
            <h2>Login: <small><%= targetName %></small></h2>
            <form class="form-horizontal" id="mainForm" action="<%= endpoint %>" name="login" method="post">
                <div class="form-group">
                    <label for="un" class="control-label col-sm-2">Username</label>
                    <div class="col-sm-10">
                        <input type="email" id="username" name="un" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pw" class="control-label col-sm-2">Password</label>
                    <div class="col-sm-10">
                        <input type="password" id="password" name="pw" class="form-control"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-default" >Log in</button>
                <a style="display: block; margin-top: 10px;" href="javascript:void(0)" id="revert-link">Go back to standard login page</a>
            </form>
    </div>
</body>
